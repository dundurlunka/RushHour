@model ActivityViewModel

<form method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" required class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" type="text" required class="timing" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" min="0.00" step="0.50" required class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-default" value="Save activity!" />
</form>
